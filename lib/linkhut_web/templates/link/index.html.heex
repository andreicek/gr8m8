<%= render("_controls.html", assigns) %>
<div id="content">
  <section>
    <%= Enum.map(@links.entries, fn [head | _] = links -> %>
      <div class="date-group">
        <h4 class="date"><span><%= prettify(head.inserted_at) %></span></h4>
        <%= render("_bookmarks.html", Map.put(assigns, :links, links)) %>
      </div>
    <% end) %>
    <%= render("_pagination.html", Map.put(assigns, :page, %{has_prev: @links.has_prev, prev_page: @links.prev_page, has_next: @links.has_next, next_page: @links.next_page})) %>
  </section>
  <%= render("_side-pannel.html", assigns) %>
</div>
